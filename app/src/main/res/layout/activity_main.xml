<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivFoto"
        android:src="@drawable/ic_medical_kit"
        android:contentDescription="Foto del usuario"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="24dp"
        android:background="#CCCCCC"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/tvSaludo"
        android:text="¡Hola, Valeria!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvMotivacion"
        android:text="¡Hoy es un buen día para cuidad tu salud!"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btnVerMedicamentos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver mis medicamentos"
        android:backgroundTint="#2BA3A3"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnConfiguraciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configuraciones"
        android:backgroundTint="#000000"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"/>

</LinearLayout>
