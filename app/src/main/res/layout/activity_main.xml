<!-- res/layout/activity_main.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#FFF0F5">

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher_foreground"
        android:scaleType="centerCrop"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/tvSaludo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola Carlos"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Hoy es un buen día para cuidar tu salud!"
        android:layout_marginBottom="32dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnVerMedicamentos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver mis medicamentos"
        android:backgroundTint="#2BA3A3"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnConfiguraciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configuraciones"
        android:backgroundTint="#000000"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"/>
</LinearLayout>
